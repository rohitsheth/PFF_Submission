<?xml version="1.0"?>
<robot name="diff_drive_robot">

<link name="body" >
  <visual>
    <geometry>
      <box size="0.1 0.1 0.05"/>
    </geometry>
    <origin rpy="0 0 0" xyz="0 0 0.04"/>
    <material name="white">
      <color rgba="1 1 1 1"/>
    </material>
  </visual>


  <collision>
    <geometry>
      <box size="0.1 0.1 0.05"/>
    </geometry>
  </collision>

	<inertial>
		<origin xyz="0 0 0.04" />
		<inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
	<mass value="10"/>
	</inertial>

</link>

<link name="head" >
  <visual>
    <geometry>
      <box size="0.05 0.05 .04"/>
    </geometry>
    <material name="white">
      <color rgba="1 1 1 1"/>
    </material>
  </visual>

  <collision>
    <geometry>
      <box size="0.05 0.05 0.04"/>
    </geometry>
  </collision>

        <inertial>
                <origin xyz="0 0 0.04" />
                <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
        <mass value="5"/>
        </inertial>

</link>

<link name="wheel_left" >
  <visual>
    <geometry>
      <cylinder length="0.02" radius="0.04"/>
    </geometry>
    <material name="black">
      <color rgba="0 0 0 1"/>
    </material>
  </visual>

  <collision>
    <geometry>
      <cylinder length="0.02" radius="0.04"/>
    </geometry>
  </collision>

	<inertial>
	      <mass value="3"/>
	      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.04"/>
	</inertial>

</link>

<link name="wheel_right" >
  <visual>
    <geometry>
      <cylinder length="0.02" radius="0.04"/>
    </geometry>
    <material name="black">
      <color rgba="0 0 0 1"/>
    </material>
  </visual>

  <collision>
    <geometry>
      <cylinder length="0.02" radius="0.04"/>
    </geometry>
  </collision>

	<inertial>
	      <mass value="3"/>
	      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.04"/>
	</inertial>


</link>

<joint name="body_to_left_wheel" type="continuous">
  <parent link="body"/>
  <child link="wheel_left"/>
  <origin xyz="0 0.06 0.04" rpy="1.57075 0 0" />
  <axis xyz="0 1 0" />
</joint>

<joint name="body_to_right_wheel" type="continuous">
  <parent link="body"/>
  <child link="wheel_right"/>
  <origin xyz="0 -0.06 0.04" rpy="1.57075 0 0" />
  <axis xyz="0 -1 0" />
</joint>

<joint name="body_to_head" type="fixed">
  <parent link="body"/>
  <child link="head"/>
  <origin xyz="0.075 0 0.04" rpy="0 0 0" />
</joint>

<gazebo>
  <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
    <robotNamespace>/diff_drive_robot</robotNamespace>
  </plugin>
</gazebo>

</robot>
