<?xml version="1.0"?>
<robot name="diff_drive_robot">

<link name="body" >
  <visual>
    <geometry>
      <box size="0.1 0.1 0.05"/>
    </geometry>
    <origin rpy="0 0 0" xyz="0 0 0.02"/>
    <material name="white">
      <color rgba="1 1 1 1"/>
    </material>
  </visual>


  <collision>
    <geometry>
      <box size="0.1 0.1 0.05"/>
    </geometry>
    <origin rpy="0 0 0" xyz="0 0 0.02"/>
  </collision>

	<inertial>
		<origin xyz="0 0 0.02" />
		<inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
	<mass value="10"/>
	</inertial>

</link>

<link name="head" >
  <visual>
    <geometry>
      <box size="0.05 0.05 .04"/>
    </geometry>
    <material name="white">
      <color rgba="1 1 1 1"/>
    </material>
  </visual>

  <collision>
    <geometry>
      <box size="0.05 0.05 0.04"/>
    </geometry>
  </collision>

        <inertial>
		<origin xyz="0.075 0 0.02" rpy="0 0 0" />
                <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
        <mass value="1"/>
        </inertial>
</link>

<link name="wheel_left" >
  <visual>
    <geometry>
      <cylinder length="0.02" radius="0.04"/>
    </geometry>
    <material name="black">
      <color rgba="0 0 0 1"/>
    </material>
  </visual>

  <collision>
    <geometry>
      <cylinder length="0.02" radius="0.04"/>
    </geometry>
  </collision>

	<inertial>
	      <mass value="3"/>
	      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.04"/>
	</inertial>

</link>

<link name="wheel_right" >
  <visual>
    <geometry>
      <cylinder length="0.02" radius="0.04"/>
    </geometry>
    <material name="black">
      <color rgba="0 0 0 1"/>
    </material>
  </visual>

  <collision>
    <geometry>
      <cylinder length="0.02" radius="0.04"/>
    </geometry>
  </collision>

	<inertial>
	      <mass value="3"/>
	      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.04"/>
	</inertial>

</link>



<joint name="body_to_left_wheel" type="continuous">
  <parent link="body"/>
  <child link="wheel_left"/>
  <origin xyz="0 0.06 0.02" rpy="1.57075 0 0" />
  <axis xyz="0 0 -1" />
  <limit effort="100" velocity="100"/>
  <joint_properties damping="0.0" friction="1.0"/>
</joint>

<transmission name="body_to_left_wheel_joint_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="body_to_left_wheel"/>
    <actuator name="body_to_left_wheel_joint_motor">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
      <mechanicalReduction>0.5</mechanicalReduction>
    </actuator>
</transmission>


<joint name="body_to_right_wheel" type="continuous">
  <parent link="body"/>
  <child link="wheel_right"/>
  <origin xyz="0 -0.06 0.02" rpy="1.57075 0 0" />
  <axis xyz="0 0 -1" />
  <limit effort="100" velocity="100"/>
  <joint_properties damping="0.0" friction="1.0"/>
</joint>


<transmission name="body_to_right_wheel_joint_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="body_to_right_wheel"/>
    <actuator name="body_to_right_wheel_joint_motor">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
      <mechanicalReduction>0.5</mechanicalReduction>
    </actuator>
</transmission>

<joint name="body_to_head" type="fixed">
  <parent link="body"/>
  <child link="head"/>
  <origin xyz="0.075 0 0.02" rpy="0 0 0" />
</joint>

  <!-- Differential drive controller  -->
  <gazebo>
    <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller_front">
      <rosDebugLevel>Debug</rosDebugLevel>
      <publishWheelTF>True</publishWheelTF>
      <publishTf>1</publishTf>
      <publishWheelJointState>true</publishWheelJointState>
      <alwaysOn>true</alwaysOn>
      <updateRate>100.0</updateRate>
      <leftJoint>body_to_left_wheel</leftJoint>
      <rightJoint>body_to_right_wheel</rightJoint>
      <wheelSeparation>0.1</wheelSeparation>
      <wheelDiameter>0.08</wheelDiameter>
      <broadcastTF>1</broadcastTF>
      <wheelTorque>30</wheelTorque>
      <wheelAcceleration>1.8</wheelAcceleration>
      <commandTopic>cmd_vel</commandTopic>
      <odometryFrame>odom</odometryFrame>
      <odometryTopic>odom</odometryTopic>
      <robotBaseFrame>base_link</robotBaseFrame>
    </plugin>
</gazebo>

</robot>
